<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Primary.Dark</item>
        <item name="colorAccent">@color/Primary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ImageCard" parent="CardView">
        <item name="cardBackgroundColor">#fff</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ImageCardMainImage">
        <item name="android:layout_height">130dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- android:layout_gravity="bottom"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                -->
    <style name="ImageCardTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Card.Title.TextColor</item>
    </style>

    <style name="ImageCardContent">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Button.Flat" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/Button.TextColor</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/Divider.Color</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Divider.Height</item>
    </style>
</resources>
